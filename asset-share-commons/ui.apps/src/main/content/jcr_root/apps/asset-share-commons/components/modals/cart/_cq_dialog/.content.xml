<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cart Modal"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maxmized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab-1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Labels"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <modal-title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Cart"
                                        fieldLabel="Modal Title"
                                        name="./modalTitle"
                                        required="{Boolean}true"/>
                                    <empty-text
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Your cart is empty."
                                        fieldLabel="Empty Text"
                                        name="./emptyText"
                                        required="{Boolean}true"/>
                                    <close-button
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Close"
                                        fieldLabel="Close Button Label"
                                        name="./closeButton"
                                        required="{Boolean}true"/>
                                    <clear-cart-button
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Clear Cart"
                                            fieldLabel="Clear Cart Button Label"
                                            name="./clearButton"
                                            required="{Boolean}true"/>
                                    <share-button
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Share Cart"
                                        fieldLabel="Share Cart Button Label"
                                        name="./shareButton"
                                        required="{Boolean}true"/>
                                    <download-button
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Download Cart"
                                        fieldLabel="Download Button Label"
                                        name="./downloadButton"
                                        required="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </tab-1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
