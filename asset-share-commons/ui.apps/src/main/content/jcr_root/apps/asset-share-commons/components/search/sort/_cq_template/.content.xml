    jcr:primaryType="nt:unstructured"
    autoSearch="{Boolean}true"
    ascendingLabel="Ascending"
    descendingLabel="Descending"
    orderByLabel="Sort By"
    orderBySortLabel="Sort Direction">
    <items jcr:primaryType="nt:unstructured">
        <item0
            jcr:primaryType="nt:unstructured"
            text="Size"
            value="@jcr:content/metadata/dam:size"/>
        <item1
            jcr:primaryType="nt:unstructured"
            text="Last Modified"
            value="@jcr:content/jcr:lastModified"/>
        <item2
            jcr:primaryType="nt:unstructured"
            text="Width"
            value="@jcr:content/metadata/tiff:ImageWidth"/>
        <item3
            jcr:primaryType="nt:unstructured"
            text="Length"
            value="@jcr:content/metadata/tiff:ImageLength"/>
    </items>
</jcr:root>
